@model Lista_Viajes_Viajeros

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Crear Asociacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="get" action="/asociaciones/Post">

            <div class="form-group">
                @Html.DropDownListFor(x => Model.Viajeros, new SelectList(Model.Viajeros, "Id", "Nombres"), htmlAttributes: new { @class = "form-control", id = "Viajero" })
            </div>

            <div class="form-group">
                @Html.DropDownListFor(x => Model.Viajes, new SelectList(Model.Viajes, "Id", "Codigo"), htmlAttributes: new { @class = "form-control", id = "Viaje" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
