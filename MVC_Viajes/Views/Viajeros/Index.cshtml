<div class="text-center">
    <h1 class="display-4">CRUD Agencia de Viajes</h1>
</div>

<div>
    @model List<MVC_Viajes.Models.Viajero>

    @{
        ViewBag.Title = "Viajeros";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <script type="text/javascript">
        function confirmar() {
            return confirm("Desea eliminar este registro?");
        }
    </script>

    <h2>Lista de viajeros:</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { onclick = "return confirmar();" })
                </td>
            </tr>
        }

    </table>
</div>


